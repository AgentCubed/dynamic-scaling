Configs: {
	ServerConfig: {
		DisplayName: Server Config

		DealDamage: {
			Label: "[i:3507] Deal Damage"
			Tooltip: Modifies damage dealt to enemies. Uses multiplier 1.2^x where x is the value (0 = no change).
		}

		TakeDamage: {
			Label: "[i:89] Take Damage"
			Tooltip: Modifies damage taken from enemies. Uses multiplier 1.2^x where x is the value (0 = no change).
		}

		EqualizeDeathsMode: {
			Label: "[i:321] Equalize Deaths Mode"
			Tooltip: Increases damage taken for players below the average death count during boss fights. Damage increases exponentially by time if everyone is dead.
		}

		ExpectedTotalMinutes: {
			Label: "[i:15] Expected Total Minutes"
			Tooltip: Expected time in minutes for a boss fight. The boss will dynamically adjust defense to attempt matching this duration. Set to 0 to disable scaling.
		}

		MaxDefenseModifier: {
			Label: "[i:156] Max Defense Modifier"
			Tooltip: Maximum amount the boss can increase its defense to reduce damage and extend the fight time.
		}

		ScalingConstant: {
			Label: "[i:149] Scaling Constant"
			Tooltip: Controls how quickly the boss defense increases based on pacing difference. Higher values make scaling more aggressive.
		}

		BossProgressionThreshold: {
			Label: "[i:43] Disable Below This Progression Value"
			Tooltip: Time-scaling won't apply to bosses with a BossChecklist progression value below this threshold. 0 to disable. Use /dumpprogression to view progression values from BossChecklist.
		}

		TargetHighestHealth: {
			Label: "[i:58] Target Highest Health"
			Tooltip: Forces bosses to prioritize targeting the player with the highest health.
		}

		DebugMode: {
			Label: "[i:1299] Debug Mode"
			Tooltip: ""
		}

		StopTargetingIfLowest: {
			Label: "[i:3202] Stop Targeting If Lowest"
			Tooltip: Prevents bosses from targeting players who are within 20 HP of the lowest health player in range.
		}

		ExpectedPlayers: {
			Label: "[i:966] Expected Players"
			Tooltip: Expected number of players for boss fights. If fewer players are present, the boss's damage and defense increase.
		}

		ExpectedPlayersBossProgressionThreshold: {
			Label: "[i:43] Disable Below This Progression Value"
			Tooltip: Expected players scaling won't apply to bosses with a BossChecklist progression value below this threshold. 0 to disable. Use /dumpprogression to view progression values from BossChecklist.
		}

		ScalingMultiplier: {
			Label: "[i:184] Scaling Multiplier"
			Tooltip: Multiplier for how much extra damage and defense the boss gains when fewer than expected players are fighting.
		}

		WeaponAdaptationEnabled: {
			Label: "[i:3507] Weapon Adaptation Enabled"
			Tooltip: ""
		}

		WeaponAdaptationStartMultiplier: {
			Label: "[i:3507] Weapon Adaptation Start Multiplier"
			Tooltip: ""
		}

		WeaponAdaptationCompleteMultiplier: {
			Label: "[i:3507] Weapon Adaptation Complete Multiplier"
			Tooltip: ""
		}

		WeaponAdaptationMinDamage: {
			Label: "[i:3507] Weapon Adaptation Min Damage"
			Tooltip: ""
		}

		WeaponAdaptationMaxReduction: {
			Label: "[i:3507] Weapon Adaptation Max Reduction"
			Tooltip: Controls how aggressively weapons are nerfed toward the average. 0 = no change, 1 = weapon is nerfed to the average damage level.
		}

		WeaponAdaptationAdaptToSoloPlayers: {
			Label: "[i:3507] Adapt To Solo Players"
			Tooltip: This will allow bosses to adapt to their weapon combo.
		}

		PlayerOverrides: {
			Label: "[i:58] Player Overrides"
			Tooltip: ""
		}

		Headers: {
			DamageEditor: "[i:3507] Damage Editor"
			BossTimeScaling: "[i:15] Boss Time Scaling"
			BossTargetingSettings: "[i:58] Boss Targeting Settings"
			BossGroupSettings: "[i:966] Boss Group Settings"
			WeaponAdaptation: "[i:3507] Weapon Adaptation"
			BossDynamicDamageScaling: "[i:184] Boss Dynamic Damage Scaling"
			Admin: Admin Settings
		}

		HighHealthThreshold: {
			Label: "[i:58] High Health Threshold"
			Tooltip: Players above this percentage are considered high health. When close to a boss, time above this threshold is tracked.
		}

		HighHealthDelaySeconds: {
			Label: "[i:15] High Health Delay Seconds"
			Tooltip: The delay in seconds before the boss starts increasing damage on players remaining above the high health threshold.
		}

		HighHealthDamageIncreasePerSecond: {
			Label: "[i:3507] High Health Damage Increase Per Second"
			Tooltip: The amount of additional damage per second the boss applies once the high health delay has passed.
		}
	}

